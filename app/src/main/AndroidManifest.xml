            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity android:name=".IndividualFileDownloadActivity" />
        <activity android:name=".GoogleDriveFileDownloadActivity" />
        <activity android:name=".CooperateFileDownloadActivity" />
        <activity android:name=".ShowFileFragmentListActivity" />
